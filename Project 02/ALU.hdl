/**
 * The ALU. Computes one of the following functions:
 * x+y, x-y, yï¿½x, 0, 1, -1, x, y, -x, -y, !x, !y,
 * x+1, y+1, x-1, y-1, x&y, x|y on two 16-bit inputs, 
 * according to 6 input bits denoted zx,nx,zy,ny,f,no.
 * The bit-combinations that yield each function are 
 * documented in the book. In addition, the ALU 
 * computes two 1-bit outputs: if the ALU output
 * is 0, zr is set to 1; otherwise zr is set to 0;
 * If out<0, ng is set to 1; otherwise ng is set to 0.
 */

// Implementation: the ALU manipulates the x and y
// inputs and then operates on the resulting values, 
// as follows:
// if (zx==1) set x = 0        // 16-bit constant ERA
// if (nx==1) set x = ~x       // bitwise "not"
// if (zy==1) set y = 0        // 16-bit constant ERA
// if (ny==1) set y = ~y       // bitwise "not"
// if (f==1)  set out = x + y  // integer 2's complement addition ERA
// if (f==0)  set out = x & y  // bitwise "and"
// if (no==1) set out = ~out   // bitwise "not" ERA
// if (out==0) set zr = 1
// if (out<0) set ng = 1 ERA

  
CHIP ALU {
    IN  
        x[16], y[16],  // 16-bit inputs        
        zx, // zero the x input?
        nx, // negate the x input?
        zy, // zero the y input?
        ny, // negate the y input?
        f,  // compute  out = x + y (if 1) or out = x & y (if 0)
        no; // negate the out output?

    OUT 
        out[16], // 16-bit output
        zr, // 1 if (out==0), 0 otherwise
        ng; // 1 if (out<0),  0 otherwise

    PARTS:
    // Manipulate x
    Not(in=zx, out=negatedZx);
    And16(a=x, b[0..15]=negatedZx,out = finalX);
    // TODO: Yoni - call your temp pin for negation finalX, and then I'll
    // TODO: change mine to manipulated Zx (that's your input), same for y
    // Manipulate y
    Not(in=zy, out=negatedZy);
    And16(a=y, b[0..15]=negatedYx, out = finalY);
    //Output
        // Addition of X and Y
    Add16(a=finalX,b=finalY, out=positiveF);
        // And of X and Y
    And16(a=finalX,b=finalY, out=zeroF);
        // TempEval is picked according to f
    Mux16(a=zeroF, b=positiveF, sel=f, out=tempEval);
        // TempEval is negated
    Not16(in=tempEval, out=negatedTempEval);
        // Picked according to the value of no.
    Mux16(a=tempEval, b=negatedTempEval, sel=no, out=finalEval, out[0] = ng);
}
